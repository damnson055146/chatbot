# Example environment configuration (copy to your local `.env`)
#
# IMPORTANT:
# - Do NOT commit real secrets.
# - Set these variables in your deployment environment or local shell.

## Backend (FastAPI)

# JWT signing secret (required for /v1/auth/*)
JWT_SECRET="change-me-long-random-string"

# Access token expiry (seconds). Default: 28800 (8 hours)
JWT_EXPIRES_SECONDS=28800

# Single admin password (MVP). If unset, admin login is effectively disabled (only user tokens will be minted).
AUTH_ADMIN_PASSWORD="change-me"

# Optional read-only admin password (MVP). Allows access to admin GET endpoints only.
AUTH_ADMIN_READONLY_PASSWORD=""

# Allow unauthenticated requests (no Authorization + no X-API-Key) to access non-admin endpoints.
AUTH_ALLOW_ANONYMOUS=true

# Optional dev/ops fallback (legacy)
# - If set, callers can pass X-API-Key: API_AUTH_TOKEN to access endpoints (treated as admin by the new RBAC layer).
API_AUTH_TOKEN=""
# - Comma-separated list. Supports "name:key" or "key"
ADMIN_API_KEYS=""

# CORS (frontend dev)
CORS_ALLOW_ORIGINS="http://localhost:5173"
CORS_ALLOW_CREDENTIALS=false

